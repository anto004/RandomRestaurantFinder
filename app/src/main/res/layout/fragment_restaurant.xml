<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".RestaurantFragment"
                >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_name_detail_text"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/restaurant_address_detail_text"
        android:layout_marginTop="121dp"
        android:layout_marginLeft="91dp"
        android:layout_marginStart="91dp"
        android:layout_below="@+id/restaurant_name_detail_text"
        android:layout_toRightOf="@+id/restaurant_name_detail_text"
        android:layout_toEndOf="@+id/restaurant_name_detail_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/restaurant_phone_detail_text"
        android:layout_below="@+id/restaurant_address_detail_text"
        android:layout_alignLeft="@+id/restaurant_address_detail_text"
        android:layout_alignStart="@+id/restaurant_address_detail_text"
        android:layout_marginTop="36dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/restaurant_rating_detail_text"
        android:layout_below="@+id/restaurant_phone_detail_text"
        android:layout_alignLeft="@+id/restaurant_phone_detail_text"
        android:layout_alignStart="@+id/restaurant_phone_detail_text"
        android:layout_marginTop="58dp"/>

</RelativeLayout>
