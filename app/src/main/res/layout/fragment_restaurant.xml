<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".RestaurantFragment"
                >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_name_detail_text"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/restaurant_address_detail_text"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/restaurant_name_detail_text"
        android:layout_toEndOf="@+id/restaurant_name_detail_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/restaurant_phone_detail_text"
        android:layout_above="@+id/restaurant_rating_detail_text"
        android:layout_alignLeft="@+id/restaurant_address_detail_text"
        android:layout_alignStart="@+id/restaurant_address_detail_text"
        android:layout_marginBottom="38dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/restaurant_rating_detail_text"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/restaurant_phone_detail_text"
        android:layout_alignStart="@+id/restaurant_phone_detail_text"
        android:layout_marginBottom="92dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_img_view"
        android:layout_below="@+id/restaurant_name_detail_text"
        android:layout_toRightOf="@+id/restaurant_name_detail_text"
        android:layout_toEndOf="@+id/restaurant_name_detail_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_img_view"
        android:layout_above="@+id/restaurant_address_detail_text"
        android:layout_alignLeft="@+id/restaurant_address_detail_text"
        android:layout_alignStart="@+id/restaurant_address_detail_text"
        android:layout_marginBottom="73dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snippet_img_view"
        android:layout_alignBottom="@+id/restaurant_rating_detail_text"
        android:layout_toRightOf="@+id/main_img_view"
        android:layout_toEndOf="@+id/main_img_view"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Location"
        android:id="@+id/google_map_btn"
        android:layout_below="@+id/snippet_img_view"
        android:layout_alignRight="@+id/restaurant_rating_detail_text"
        android:layout_alignEnd="@+id/restaurant_rating_detail_text"
        android:layout_marginTop="28dp"/>

</RelativeLayout>
